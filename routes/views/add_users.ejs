<%- include('layout/header') %>


<div class="container">
  <div class="row">
  <div class="col-lg-6 mx-auto mt-0">
  <div class="card shadow">
  <div class="card-header bg-primary">
  <h3 class="text-light">Add New User</h3>
  </div>
  <div class="card-body p-4">
                <form action="/add" method="post" id="add-form" enctype="multiport/form-data"class="col g-4 mt-3" style="background-color: bisque; border-radius: 20px; padding: 4%; display: flex; flex-direction: column; justify-content: center; align-items: center;">
                    <div class="col-md-6">
                      <label for="inputName" class="form-label" aria-required="true" >Name</label>
                      <input type="text" class="form-control" id="Name" name="name" required placeholder="Name">
                    </div>
                    
                    <div class="col-md-6 mt-4">
                      <label for="inputName" class="form-label">Email</label>
                      <input type="text" class="form-control" name="email" id="Email" email="Email" required placeholder="Email">
                    </div>
                    <div class="col-md-6 mt-4">
                        <label for="inputPhone" class="form-label">Phone</label>
                        <input type="tel" class="form-control" name="phone" id="Phone" phone="Phone" required placeholder="Phone">
                      </div>

                      <div class="col-md-6 mt-4">
                        <label for="image" class="form-label">Select Image</label>
                        <input type="file" name="fieldname" class="form-control" id="image">
                      </div>

                    
                    <div class="col-12 mt-4" style=" width: fit-content;">
                      <button type="submit" class="btn btn-primary" style="width: fit-content;">Add User</button>
                    </div>
                  </form>

            </div>
        </div>
    </div>
    <%- include('layout/footer') %>